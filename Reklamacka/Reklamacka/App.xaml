<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Reklamacka.App">
	<Application.Resources>

		<Style TargetType="NavigationPage">
			<Setter Property="BarBackgroundColor" Value="#444444"/>
			<Setter Property="BarTextColor" Value="White" />
		</Style>

		<Style x:Key="Normal-Font" TargetType="Label">
			<Setter Property="FontFamily" Value="OpenSans-Medium.ttf#OpenSans-Medium.ttf"/>
		</Style>

		<Style x:Key="Bold-Font" TargetType="Label">
			<Setter Property="FontFamily" Value="OpenSans-Bold.ttf#OpenSans-Bold.ttf"/>
		</Style>

		<Style x:Key="ExtraBold-Font" TargetType="Label">
			<Setter Property="FontFamily" Value="OpenSans-ExtraBold.ttf#OpenSans-ExtraBold.ttf"/>
		</Style>

	</Application.Resources>
</Application>