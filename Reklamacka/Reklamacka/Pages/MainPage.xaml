<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Reklamacka.MainPage">

	<StackLayout>
		<Label Text="Reklamacka" FontSize="Title" VerticalOptions="EndAndExpand" HorizontalOptions="Center"/>

		<Button Text="edit" FontSize="Title" FontAttributes="Bold" Command="{Binding EditBill}" BackgroundColor="Red"
				WidthRequest="100" HeightRequest="50" IsVisible="{Binding CanBeEdited}"/>
		
		<Grid>
			<ListView x:Name="ListBills" ItemsSource="{Binding Bills}" Margin="10" 
					  SelectedItem="{Binding SelectedBill}" ItemSelected="ListBillsItemSelected">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout>
								<Label Text="{Binding ProductName}" BackgroundColor="LightBlue"/>
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

			<Button Text="+" FontSize="Title" FontAttributes="Bold" Command="{Binding AddNewBill}" 
				Margin="20" BackgroundColor="DeepSkyBlue" CornerRadius="30" 
				VerticalOptions="End" HorizontalOptions="End" WidthRequest="60" HeightRequest="60"/>
		</Grid>

	</StackLayout>

</ContentPage>
